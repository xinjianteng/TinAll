<com.zhy.autolayout.AutoRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_empty_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivEmptyView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tvEmptyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/ac_margin"
            android:text="添加你喜爱的小说"
            app:layout_auto_baseheight="textSize"
            android:textColor="@color/common_h1"
            android:textSize="@dimen/tt_54"/>

        <TextView
            android:id="@+id/btnToAdd"
            app:layout_auto_baseheight="textSize"
            android:layout_width="420px"
            android:layout_height="110px"
            android:background="@drawable/shape_common_green_bg"
            android:clickable="true"
            android:textSize="@dimen/tt_44"
            android:text="@string/to_add"
            android:gravity="center"
            android:textColor="@color/white"/>

    </com.zhy.autolayout.AutoLinearLayout>
</com.zhy.autolayout.AutoRelativeLayout>