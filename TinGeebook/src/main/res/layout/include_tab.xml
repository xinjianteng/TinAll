<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ll_tab_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tab_layout_height"
    android:orientation="vertical"
    android:background="@color/tab_layout_bg_color"
    >

    <TextView
        android:id="@+id/tv_tab_bottomLine"
        android:background="@color/tab_bottom_line_bg_color"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:layout_height="1px" />

    <!--返回键-->
    <ImageView
        android:id="@+id/iv_tab_back"
        android:layout_centerVertical="true"
        android:src="@drawable/global_back_normal"
        app:layout_auto_baseheight="width"
        android:paddingLeft="@dimen/ac_margin"
        android:paddingRight="@dimen/ac_margin"
        android:layout_width="@dimen/tab_return_width"
        android:layout_height="match_parent" />


    <!--标题-->
    <TextView
        android:id="@+id/tv_tab_title"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textSize="@dimen/tab_title_textsize"
        android:ellipsize="end"
        android:lines="1"
        android:gravity="center"
        android:textColor="@color/tab_title_textsize_color"
        android:layout_width="wrap_content"
        android:maxLength="10"
        app:layout_auto_baseheight="height|width|textSize|margin|padding"
        android:layout_height="wrap_content" />


    <!--云端  使用页面：首页、本地藏书右上角-->
    <ImageView
        android:id="@+id/iv_tab_cloud"
        android:layout_alignParentRight="true"
        android:src="@drawable/cloud_icon"
        android:paddingLeft="@dimen/ac_margin"
        android:paddingRight="@dimen/ac_margin"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/tab_cloud_width"
        android:layout_height="match_parent"
        app:layout_auto_basewidth="padding"
        android:visibility="gone"
        />


    <!--图书分类  使用页面，云端右上角-->
    <ImageView
        android:id="@+id/iv_tab_cloud_type"
        android:adjustViewBounds="true"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/cloud_type"
        android:layout_width="149px"
        android:paddingLeft="@dimen/ac_margin"
        android:paddingRight="@dimen/ac_margin"
        android:layout_height="match_parent"
        app:layout_auto_basewidth="padding"
        android:visibility="gone"
        />

    <!--增加-->
    <ImageView
        android:id="@+id/iv_tab_add"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/global_add_normal"
        android:layout_width="126px"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/ac_margin"
        android:paddingLeft="@dimen/ac_margin"
        app:layout_auto_basewidth="padding"
        android:visibility="gone"
        />

    <!--提醒、规则-->
    <ImageView
        android:id="@+id/iv_tab_remind"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/global_remind_normal"
        android:layout_width="122px"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/ac_margin"
        android:paddingLeft="@dimen/ac_margin"
        app:layout_auto_basewidth="padding"
        android:visibility="gone"
        />


    <!--编辑-->
    <ImageView
        android:id="@+id/iv_tab_edit"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/global_edit_normal"
        android:paddingRight="@dimen/ac_margin"
        android:paddingLeft="@dimen/ac_margin"
        android:layout_height="match_parent"
        android:layout_width="131px"
        app:layout_auto_basewidth="padding"
        android:visibility="gone"
        />


    <!--反馈-->
    <ImageView
        android:id="@+id/iv_feedback"
        android:src="@drawable/global_feedback"
        android:layout_toLeftOf="@+id/iv_share"
        android:layout_width="140px"
        android:paddingLeft="@dimen/ac_margin"
        android:paddingRight="@dimen/ac_margin"
        android:layout_height="match_parent"
        app:layout_auto_basewidth="padding"
        android:visibility="gone"
        />

    <!--分享-->
    <ImageView
        android:id="@+id/iv_share"
        android:layout_alignParentRight="true"
        android:src="@drawable/global_share"
        android:layout_width="130px"
        android:paddingLeft="@dimen/ac_margin"
        android:paddingRight="@dimen/ac_margin"
        android:layout_height="match_parent"
        app:layout_auto_basewidth="padding"
        android:visibility="gone"
        />


    <!--删除-->
    <ImageView
        android:id="@+id/iv_del"
        android:layout_alignParentRight="true"
        android:src="@drawable/global_delete"
        android:paddingLeft="@dimen/ac_margin"
        android:paddingRight="@dimen/ac_margin"
        app:layout_auto_basewidth="padding"
        android:layout_width="124px"
        android:layout_height="match_parent"
        android:visibility="gone"
        />


    <!--搜索-->
    <ImageView
        android:id="@+id/iv_search"
        android:layout_alignParentRight="true"
        android:src="@drawable/global_searching"
        android:layout_width="135px"
        app:layout_auto_basewidth="padding"
        android:visibility="gone"
        android:paddingRight="@dimen/ac_margin"
        android:paddingLeft="@dimen/ac_margin"
        android:layout_height="match_parent" />

    <!--文字按钮-->
    <TextView
        android:id="@+id/iv_submit"
        android:layout_alignParentRight="true"
        android:text="提交"
        android:gravity="center"
        android:textSize="@dimen/tab_submit_textsize"
        android:paddingRight="@dimen/ac_margin"
        android:paddingLeft="@dimen/ac_margin"
        android:textColor="@color/tab_submit_textsize_color"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_auto_basewidth="padding"
        android:visibility="gone"
        />

</RelativeLayout>
