<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_menu_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1px"
    app:layout_auto_baseheight="padding"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_library"
        style="@style/main_menu"
        app:layout_auto_baseheight="padding"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_library"
            android:layout_width="76px"
            android:layout_height="65px"
            app:layout_auto_baseheight="width"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_library"
            style="@style/main_menu_tv"
            app:layout_auto_baseheight="textSize|margin"
            android:text="@string/main_menu_library" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_borrow"
        style="@style/main_menu"
        app:layout_auto_baseheight="padding"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_borrow"
            app:layout_auto_baseheight="width"
            android:layout_width="70px"
            android:layout_height="66px"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_borrow"
            app:layout_auto_baseheight="textSize|margin"
            style="@style/main_menu_tv"
            android:text="@string/main_menu_borrow" />

    </LinearLayout>


    <!--发现-->
    <LinearLayout
        android:id="@+id/ll_find"
        style="@style/main_menu"
        app:layout_auto_baseheight="padding"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_find"
            android:layout_width="66px"
            android:layout_height="66px"
            app:layout_auto_baseheight="width"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_find"
            app:layout_auto_baseheight="textSize|margin"
            style="@style/main_menu_tv"
            android:text="@string/main_menu_find" />
    </LinearLayout>


    <!--我的-->
    <LinearLayout
        android:id="@+id/ll_me"
        style="@style/main_menu"
        app:layout_auto_baseheight="padding"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_me"
            android:layout_width="50px"
            android:layout_height="66px"
            app:layout_auto_baseheight="width"
            android:background="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tv_me"
            style="@style/main_menu_tv"
            app:layout_auto_baseheight="textSize|margin"
            android:text="@string/main_menu_me" />

    </LinearLayout>


</LinearLayout>
