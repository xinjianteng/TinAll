<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.igeek.hfrecycleviewtest">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.HeadFootActivity"
            android:label="@string/title_activity_head_foot"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.FootActivity"
            android:label="@string/title_activity_foot"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.GridActivity"
            android:label="@string/title_activity_grid"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.GridFlowAcitvity"
            android:label="@string/title_activity_grid_flow_acitvity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.MultiTypeActivity"
            android:label="@string/title_activity_multi_type"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>