<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_ffffff">

    <LinearLayout
        android:id="@+id/rmTypeView2_LineGap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/shape_line_gray_1px"
        android:orientation="vertical"
        android:showDividers="beginning|end">

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:background="@color/gray_f4f4f4" />

    </LinearLayout>

    <!-- 纵横比：238/680 -->
    <widgets.AspectRatioImageView
        android:id="@+id/rmTypeView2_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rmTypeView2_LineGap"
        android:layout_margin="8dp"
        android:background="@mipmap/ic_big_fillwidth"
        app:aspectRatio="0.35" />

</RelativeLayout>